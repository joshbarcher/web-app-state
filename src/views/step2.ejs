<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Signup Step 2</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="<%= bodyClass %>">
    <header class="bar">
        <div class="brand">Multi-Form Session</div>
        <nav class="nav">
            <a href="/">Home</a>
            <a href="/status">Status</a>
        </nav>
    </header>

    <main class="container">
        <h1>Step 2</h1>

        <form method="POST" action="/signup/step/2" class="stack">
            <label>
                Email
                <input name="email" value="<%= signup.email || "" %>">
            </label>

            <label>
                Favorite color
                <input name="favoriteColor" value="<%= signup.favoriteColor || "" %>">
            </label>

            <button type="submit">Next</button>
        </form>

        <p><a href="/signup/step/1">Back</a></p>
    </main>
</body>
</html>