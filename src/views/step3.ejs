<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Signup Step 3</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body class="<%= bodyClass %>">
    <header class="bar">
        <div class="brand">Multi-Form Session</div>
        <nav class="nav">
            <a href="/">Home</a>
            <a href="/status">Status</a>
        </nav>
    </header>

    <main class="container">
        <h1>Step 3</h1>

        <form method="POST" action="/signup/step/3" class="stack">
            <label>
                Notes
                <textarea name="notes" rows="4"><%= signup.notes || "" %></textarea>
            </label>

            <button type="submit">Submit</button>
        </form>

        <p><a href="/signup/step/2">Back</a></p>
    </main>
</body>
</html>